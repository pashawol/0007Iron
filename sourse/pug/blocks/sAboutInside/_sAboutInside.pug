mixin aboutSlide(i)
	.swiper-slide
		+e.aboutSlide(href=`img/@2x/about-${i}.jpg` data-fancybox=`about`)
			picture
				source.swiper-lazy(srcset="#" data-srcset=`img/@2x/webp/about-${i}.webp` type="image/webp")
				img.swiper-lazy(src="#" data-src=`img/@2x/about-${i}.jpg`, alt="")

mixin sAboutInside()
	// start sAboutInside
	+b.sAboutInside.section#sAboutInside&attributes(attributes)
		.container
			+e.links
				+e.link.active(href="#") Красота
				+e.link(href="#") Сила
				+e.link(href="#") Ржавчина
				+e.link(href="#") Польза
				+e.link(href="#") Гараж
				+e.link(href="#") Кино
				+e.link(href="#") Звуки железа
			mixin item(bg,title)
				+e.item&attributes(attributes)
					+pic(`about-bg-${bg}.png`,'','lazy','')(class="picture-bg")
					+e.title= title
					p Центр &laquo;Железно!&raquo;&nbsp;&mdash; это многофункциональное экспозиционно-образовательное и&nbsp;досуговое пространство. В&nbsp;оснащенных мультимедийным оборудованием залах посетители получат возможность просматривать фотослайды, видеоролики, с&nbsp;использованием интерактивных сервисов ознакомиться с&nbsp;процессами выплавки стали, производства проката, с&nbsp;историей разведки железорудных месторождений и&nbsp;создания выдающихся сооружений
					+e.slider
						.swiper-container.sliderAbout-js
							.about-prev
								+icon('chevron-left-sl')
							.swiper-wrapper
								block
							.about-next
								+icon('chevron-right-sl')
			+item('1','Красота')
				+aboutSlide('1-1')
				+aboutSlide('1-2')
				+aboutSlide('1-3')
			+item('2','Сила')
				+aboutSlide('2-1')
				+aboutSlide('2-2')
				+aboutSlide('2-3')
			+item('3','Памятник ржавичне')
				+aboutSlide('3-1')
				+aboutSlide('3-2')
				+aboutSlide('3-3')
			+item('4','Польза')
				+aboutSlide('3-1')
				+aboutSlide('3-2')
				+aboutSlide('3-3')
	// end sAboutInside